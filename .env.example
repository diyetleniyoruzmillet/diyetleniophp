# Diyetlenio - Ortam Değişkenleri

# Uygulama
APP_NAME=Diyetlenio
APP_ENV=production
APP_DEBUG=false
APP_URL=https://www.diyetlenio.com
APP_KEY=base64:YourRandomGeneratedKeyHere

# Veritabanı
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=12434
DB_DATABASE=railway
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# Session
SESSION_LIFETIME=7200
SESSION_SECURE=true

# Cache
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# E-posta
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=info@diyetlenio.com
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@diyetlenio.com
MAIL_FROM_NAME=Diyetlenio

# Dosya Yükleme
UPLOAD_MAX_SIZE=10485760

# Sayfalama
PAGINATION_PER_PAGE=20

# Randevu
APPOINTMENT_DURATION=45
CANCELLATION_HOURS=2
REMINDER_HOURS=1

# Video
VIDEO_MAX_DURATION=60

# API
API_RATE_LIMIT=60
API_TIMEOUT=30

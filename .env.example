# Diyetlenio - Ortam Değişkenleri (Örnek Dosya)
# UYARI: Bu dosyayı .env olarak kopyalayın ve gerçek değerlerinizi girin
# .env dosyasını ASLA git'e commit ETMEYİN!

# Uygulama
APP_NAME=Diyetlenio
APP_ENV=production
APP_DEBUG=false
APP_URL=https://www.diyetlenio.com
APP_KEY=base64:YourRandomGeneratedKeyHere_CHANGE_THIS

# Veritabanı
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=diyetlenio_db
DB_USERNAME=diyetlenio_user
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE_CHANGE_THIS
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# Session
SESSION_LIFETIME=7200
SESSION_SECURE=true
CSRF_TOKEN_NAME=csrf_token

# Cache
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# E-posta (SMTP)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=info@diyetlenio.com
MAIL_PASSWORD=YOUR_MAIL_PASSWORD_HERE_CHANGE_THIS
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@diyetlenio.com
MAIL_FROM_NAME=Diyetlenio

# Dosya Yükleme
UPLOAD_MAX_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_DOC_TYPES=pdf,doc,docx

# Sayfalama
PAGINATION_PER_PAGE=20

# Randevu
APPOINTMENT_DURATION=45
CANCELLATION_HOURS=2
REMINDER_HOURS=1

# Video
VIDEO_MAX_DURATION=60

# WebRTC (Video Görüşme - Opsiyonel)
TURN_SERVER_URL=
TURN_USERNAME=
TURN_PASSWORD=

# API
API_RATE_LIMIT=60
API_TIMEOUT=30

# Geliştirme (Production'da false olmalı!)
DEBUG_MODE=false
LOG_ERRORS=true

# ========================================
# GÜVENLIK UYARISI - MUTLAKA OKUYUN!
# ========================================
# 1. Bu dosyayı .env olarak kopyalayın
# 2. TÜM "CHANGE_THIS" ifadelerini değiştirin
# 3. Güçlü ve benzersiz şifreler kullanın
# 4. .env dosyasını ASLA git'e commit etmeyin
# 5. Production'da APP_DEBUG=false olmalı
# 6. HTTPS kullanıyorsanız SESSION_SECURE=true
# 7. Şifreleri düzenli olarak değiştirin

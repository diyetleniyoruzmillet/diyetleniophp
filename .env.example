# Diyetlenio - Ortam Değişkenleri (Node.js)

# Application
NODE_ENV=development
APP_NAME=Diyetlenio
APP_URL=http://localhost:3000
APP_PORT=3000
APP_KEY=your_32_character_secret_key_here

# Database (Prisma)
DATABASE_URL="mysql://root:your_password_here@localhost:12434/railway?schema=public"

# JWT & Session
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=your_session_secret_here
SESSION_LIFETIME=7200

# Cache
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# E-posta
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=info@diyetlenio.com
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@diyetlenio.com
MAIL_FROM_NAME=Diyetlenio

# SMS (Türkiye Sağlayıcılar)
# Desteklenen: netgsm, iletimerkezi, vatansms
SMS_PROVIDER=netgsm
SMS_USERNAME=your_sms_username
SMS_PASSWORD=your_sms_password
SMS_API_KEY=your_api_key
SMS_HEADER=DIYETLENIO

# Dosya Yükleme
UPLOAD_MAX_SIZE=10485760

# Sayfalama
PAGINATION_PER_PAGE=20

# Randevu
APPOINTMENT_DURATION=45
CANCELLATION_HOURS=2
REMINDER_HOURS=1

# Video
VIDEO_MAX_DURATION=60

# WebRTC Signaling Server
# Development: http://localhost:3000
# Production: https://your-signaling-server.up.railway.app
SIGNALING_SERVER_URL=http://localhost:3000

# API
API_RATE_LIMIT=60
API_TIMEOUT=30

# Migration Security
MIGRATION_TOKEN=change_this_to_a_strong_secret
